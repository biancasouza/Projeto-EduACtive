<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.Dialog"
    tools:context=".Activity.editMetodo">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/txt_tituloedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Título"
                android:singleLine="false"
                android:textSize="14sp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/txt_descricaoedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Descrição"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textSize="14sp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/txt_competenciasedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Competencias"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textSize="14sp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/txt_sequenciaedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Sequência Didática"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textSize="14sp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg"
                app:roundedCorners="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/btnUploadedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapSize="lg"
                    app:roundedCorners="true"
                    android:layout_margin="10dp"
                    android:text="Arquivo"

                    app:bootstrapBrand="info"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txt_statusedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para substituir, selecione um novo arquivo "
                    android:textSize="12sp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCadastrometodoedit"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                app:bootstrapSize="lg"
                app:roundedCorners="true"
                android:layout_margin="10dp"
                android:text="Salvar"
                app:bootstrapBrand="info"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/btnCancelametodoedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bootstrapSize="lg"
                app:roundedCorners="true"
                android:layout_margin="10dp"
                android:text="Cancelar"
                app:bootstrapBrand="danger"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>